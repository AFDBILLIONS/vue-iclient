$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
.theme-default-content:not(.custom){
  max-width: 80%;
}
@media (max-width: 959px){
  max-width: 740px;
}

.page th,.page td{
  width: 1%;
  border-top: none;
  border-left: none;
  border-right: none;
}
.page th:first-child, .page td:first-child{
  padding-left: 10px;
}

.page td{
  color: #606266;
}

.page th{
  white-space: nowrap;
  color: #909399;
  font-weight: 400;
  border-bottom: 1px solid #dcdfe6;
  padding: 15px;
}
.page tr{
  border-top: none !important;
}
.page table {
  border-collapse: collapse;
  width: 100%;
  background-color: #fff;
  font-size: 14px;
  margin-bottom: 45px;
  line-height: 1.5em;
}
.page-edit, .page-nav{
 max-width: 80%;
}